{
	"name": "kyleschwartz.ca-ssr",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev --host",
		"build": "pnpm dlx playwright install-deps && pnpm pdf && vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"pdf": "playwright test",
		"update_hooks": "lefthook install",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@rollup/plugin-yaml": "^4.0.1",
		"@steeze-ui/heroicons": "^1.1.1",
		"@steeze-ui/svelte-icon": "^1.3.2",
		"@sveltejs/adapter-auto": "^1.0.2",
		"@sveltejs/kit": "^1.2.2",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^18.11.18",
		"autoprefixer": "^10.4.13",
		"cssnano": "^5.1.14",
		"lefthook": "^1.2.7",
		"postcss": "^8.4.21",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.2",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.4"
	},
	"dependencies": {
		"@icons-pack/svelte-simple-icons": "^3.0.0",
		"daisyui": "^2.47.0",
		"date-fns": "^2.29.3",
		"tailwindcss": "^3.2.4"
	},
	"type": "module",
	"optionalDependencies": {
		"@playwright/test": "^1.29.2"
	}
}
